<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scene_List_Activity">

    <LinearLayout
        android:orientation = "vertical"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:gravity = "top"
        android:layout_marginTop="10px"
        android:layout_weight = "1"
        >

    <TextView
        android:id="@+id/tvPlayTitleSceneList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Play Title: Scenes"
        android:textSize="60dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVScene"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <Button
        android:id="@+id/btn_Another_Character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Add New Character"
        android:onClick="addSceneBtn"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="197dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>