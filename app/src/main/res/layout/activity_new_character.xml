<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCharacterActivity">

    <LinearLayout
        android:orientation = "vertical"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:gravity = "center_horizontal"
        >

        <TextView
            android:id="@+id/tvPlayTitleNewCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Play Title"
            android:textSize="60dp"
            />

        <EditText
            android:id="@+id/etCharacterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:ems="15"
            android:inputType="textPersonName"
            android:hint="Character Name"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="101dp" />

        <Spinner
            android:id="@+id/genderSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:spinnerMode="dropdown"/>

        <Switch
            android:id="@+id/userRoleSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="I'm playing this character" />

        <Button
            android:id="@+id/btn_Save_Character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Save Character"
            android:onClick="saveCharacterBtn"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="197dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>