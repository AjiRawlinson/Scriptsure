<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Character_List_Activity">

    <LinearLayout
        android:orientation = "vertical"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:gravity = "top"
        android:layout_marginTop="10px"
        android:layout_weight = "1"
        android:paddingBottom="200px"
        >

        <TextView
            android:id="@+id/tvCharacterNoData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:singleLine="true"
            android:textColor="#D3D3D3"
            android:typeface="monospace"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:text="No Characters added" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RVCharacter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:scrollbars="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="bottom|right"
        android:paddingBottom="15px"
        android:paddingRight="15px">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fBtNewCharacter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:clickable="true"
            android:onClick="newCharacterBtn"
            app:srcCompat="@android:drawable/ic_input_add" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>