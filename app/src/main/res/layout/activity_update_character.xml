<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateCharacterActivity">

    <LinearLayout
        android:orientation = "vertical"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:gravity = "center_horizontal"
        >

        <EditText
            android:id="@+id/etUpdateCharacterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:ems="15"
            android:inputType="textPersonName"
            android:hint="Character Name"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="101dp" />

        <Spinner
            android:id="@+id/spinnerUpdateGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:spinnerMode="dropdown"/>

        <Switch
            android:id="@+id/switchUpdateUserRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="I'm playing this character" />

        <Button
            android:id="@+id/btn_Update_Character_Colour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Click To Pick Random Colour"
            android:onClick="updateCharacterColourBtn"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="197dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            >

            <Button
                android:id="@+id/btn_Update_Character"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:layout_margin="10px"
                android:background="@color/colorAccent"
                android:text="Save Character"
                android:onClick="updateCharacterBtn"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="197dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>